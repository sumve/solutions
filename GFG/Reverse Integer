class Solution {
public:
    int reverse(int x) {
        int revx=0;
        while(x != 0){
            int last_digit=x%10;

            if (revx > INT_MAX / 10 || (revx == INT_MAX / 10 && last_digit > 7)) return 0;
            if (revx < INT_MIN / 10 || (revx == INT_MIN / 10 && last_digit < -8)) return 0;

            x=x/10;
            revx=(revx*10)+last_digit;
        }
        return revx;
    }
};
